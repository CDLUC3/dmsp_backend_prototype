{
  "name": "dmsp_apollo",
  "version": "1.0.0",
  "description": "Prototype backend for the new DMSP system",
  "type": "module",
  "exports": "./index.js",
  "scripts": {
    "compile": "tsc",
    "copy-graphql": "mkdir -p ./dist/schemas && cp ./src/schemas/*.graphql ./dist/schemas/",
    "generate": "graphql-codegen",
    "lint": "npx eslint . --ignore-pattern dist/ --ignore-pattern src/types.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test-no-db": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathIgnorePatterns=\"src/datasources/__tests__/relatedWorksTables.spec.ts\"",
    "build": "rm -rf ./dist && npm run generate && npm run compile",
    "dev": "tsx watch ./src/index.ts",
    "start": "npm run build && nodemon ./dist/index.js",
    "aws_start": "node ./dist/index.js",
    "prepare": "is-ci || npx husky install",
    "trivy-high": "sh ./src/scripts/trivy-high.sh",
    "trivy-med": "sh ./src/scripts/trivy-med.sh",
    "trivy-all": "npm run trivy-high && npm run trivy-med"
  },
  "compilerOptions": {
    "sourceMap": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CDLUC3/dmsp_backend_prototype.git"
  },
  "author": "University of California Curation Center (UC3)<dmptool@ucop.edu>",
  "keywords": [],
  "license": "MIT",
  "engines": {
    "node": ">=21.6.2",
    "npm": ">=10.2.4"
  },
  "overrides": {
    "qs": "6.14.1"
  },
  "dependencies": {
    "@apollo/datasource-rest": "6.4.1",
    "@apollo/server": "4.12.2",
    "@apollo/utils.keyvadapter": "3.1.0",
    "@aws-sdk/client-dynamodb": "3.922.0",
    "@aws-sdk/client-ssm": "3.896.0",
    "@aws-sdk/util-dynamodb": "3.891.0",
    "@dmptool/types": "2.0.0",
    "@elastic/ecs-pino-format": "1.5.0",
    "@graphql-tools/merge": "9.1.2",
    "@graphql-tools/mock": "9.0.25",
    "@graphql-tools/schema": "10.0.25",
    "@keyv/redis": "3.0.1",
    "@node-oauth/express-oauth-server": "4.1.4",
    "bcryptjs": "2.4.3",
    "body-parser": "1.20.3",
    "casual": "1.6.2",
    "cookie-parser": "1.4.7",
    "date-fns": "4.1.0",
    "dotenv": "16.6.1",
    "express": "4.22.1",
    "express-jwt": "8.5.1",
    "graphql": "16.11.0",
    "graphql-tag": "2.12.6",
    "http-cache-semantics": "4.2.0",
    "ioredis": "5.7.0",
    "is-ci": "4.1.0",
    "jsonwebtoken": "9.0.2",
    "keyv": "5.5.2",
    "mysql2": "3.15.0",
    "nodemailer": "7.0.11",
    "pino": "9.12.0",
    "uuid": "9.0.1",
    "uuid-random": "1.3.2",
    "uuidv4": "6.2.13"
  },
  "devDependencies": {
    "@eslint/js": "9.39.0",
    "@graphql-codegen/cli": "4.0.1",
    "@graphql-codegen/typescript": "4.1.6",
    "@graphql-codegen/typescript-resolvers": "4.5.2",
    "@types/bcryptjs": "2.4.6",
    "@types/cors": "2.8.19",
    "@types/express": "4.17.23",
    "@types/express-oauth-server": "2.0.9",
    "@types/jest": "29.5.14",
    "@types/oauth2-server": "3.0.18",
    "@types/pino": "7.0.5",
    "@types/supertest": "6.0.3",
    "assert": "2.1.0",
    "eslint": "8.57.1",
    "globals": "15.15.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-expect-message": "1.1.3",
    "jest-mock": "29.7.0",
    "nock": "13.5.6",
    "nodemon": "3.1.10",
    "supertest": "7.1.4",
    "ts-jest": "29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "5.9.2",
    "typescript-eslint": "7.18.0"
  }
}
