{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "esModuleInterop": true,
    "isolatedModules": true,
    "types": ["jest", "jest-expect-message"],
    "sourceMap": true
  },
  "include": ["src", "src/__tests__"],
  "exclude": ["node_modules"],
}
